<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CrearCalendario">
    <LinearLayout
        android:layout_width="53dp"
        android:layout_height="51dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="2dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/iconosuperior"
            android:rotation="0"
            android:scaleType="fitCenter"
            android:scaleX="1"
            android:scaleY="1"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:shadowColor="@color/colorPrimarioOscuro"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1.5"
        android:text="@string/txtCreacionCalendario"
        android:layout_marginTop="-45dp"
        android:textColor="@color/colorNegro"
        android:textSize="25sp"
        android:textStyle="bold" />
    <TextView
        style="@style/Subtitulo"
        android:layout_marginTop="30dp"
        android:text="@string/txtSemana"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorClaro">
        <Spinner
            android:id="@+id/spinSemana"
            style="@style/SelectorSemana"
            android:layout_width="280dp"
            android:layout_height="35dp" />
    </RelativeLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:columnCount="3"
        android:rowCount="6">
        <TextView
            style="@style/Subtitulo"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/txtMinuta" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_row="1"
            android:layout_column="0"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:padding="2dp"
            android:text="@string/txtLunes"
            android:textColor="@color/colorNegro"
            android:textSize="20sp"
            android:verticalSpacing="2dp" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@color/colorGrisClaro"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:padding="2dp"
            android:text="@string/txtMartes"
            android:textSize="20sp"
            android:textColor="@color/colorNegro"
            android:verticalSpacing="2dp" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_row="3"
            android:layout_column="0"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:padding="2dp"
            android:text="@string/txtMiercoles"
            android:textSize="20sp"
            android:verticalSpacing="2dp" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_row="4"
            android:layout_column="0"
            android:background="@color/colorGrisClaro"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:padding="2dp"
            android:text="@string/txtJueves"
            android:textSize="20sp"
            android:textColor="@color/colorNegro"
            android:verticalSpacing="2dp" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_row="5"
            android:layout_column="0"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:padding="2dp"
            android:text="@string/txtViernes"
            android:textSize="20sp"
            android:textColor="@color/colorNegro"
            android:verticalSpacing="2dp" />
        <View
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_row="1"
            android:layout_column="1" />
        <View
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_row="2"
            android:layout_column="1" />
        <View
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_row="3"
            android:layout_column="1" />
        <View
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_row="4"
            android:layout_column="1" />
        <View
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_row="5"
            android:layout_column="1" />
        <Spinner
            android:id="@+id/spinLun"
            style="@style/Selectores"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textColor="@color/colorNegro"
            android:layout_row="1"
            android:layout_column="2" />
        <Spinner
            android:id="@+id/spinMar"
            style="@style/Selectores"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textColor="@color/colorNegro"
            android:layout_row="2"
            android:layout_column="2"/>
        <Spinner
            android:id="@+id/spinMie"
            style="@style/Selectores"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textColor="@color/colorNegro"
            android:layout_row="3"
            android:layout_column="2" />
        <Spinner
            android:id="@+id/spinJue"
            style="@style/Selectores"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_row="4"
            android:layout_column="2"
            android:textColor="@color/colorNegro"
            />
        <Spinner
            android:id="@+id/spinVie"
            style="@style/Selectores"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textColor="@color/colorNegro"
            android:layout_row="5"
            android:layout_column="2" />
    </GridLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botonGuardaCal"
        android:layout_width="83dp"
        android:layout_height="59dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/colorPrimarioSuave"
        android:src="@drawable/aceptar" />
</LinearLayout>