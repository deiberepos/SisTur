<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".CrearCalendario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:background="@drawable/logoinicial" />

            <LinearLayout
                android:id="@+id/layCalenda"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:shadowColor="@color/colorPrimarioOscuro"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1.5"
                    android:text="Creación de Calendarios"
                    android:textColor="@color/colorNegro"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:text="SEMANA"
                    android:textColor="@color/colorNegro"
                    android:textSize="20dp"
                    android:textStyle="italic|bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorClaro">

                    <Spinner
                        android:id="@+id/spinSemana"
                        style="@style/SelectorSemana"
                        android:layout_width="280dp"
                        android:layout_height="35dp" />
                </RelativeLayout>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:columnCount="3"
                    android:rowCount="6">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_columnSpan="3"
                        android:layout_gravity="center"
                        android:text="MINUTA"
                        android:textColor="@color/colorNegro"
                        android:textSize="20dp"
                        android:textStyle="italic|bold" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:horizontalSpacing="2dp"
                        android:padding="2dp"
                        android:text="Lunes"
                        android:textSize="20dp"
                        android:verticalSpacing="2dp" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:background="@color/colorGrisClaro"
                        android:gravity="center"
                        android:horizontalSpacing="2dp"
                        android:padding="2dp"
                        android:text="Martes"
                        android:textSize="20dp"
                        android:verticalSpacing="2dp" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:horizontalSpacing="2dp"
                        android:padding="2dp"
                        android:text="Miércoles"
                        android:textSize="20dp"
                        android:verticalSpacing="2dp" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_row="4"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:background="@color/colorGrisClaro"
                        android:gravity="center"
                        android:horizontalSpacing="2dp"
                        android:padding="2dp"
                        android:text="Jueves"
                        android:textSize="20dp"
                        android:verticalSpacing="2dp" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_row="5"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:horizontalSpacing="2dp"
                        android:padding="2dp"
                        android:text="Viernes"
                        android:textSize="20dp"
                        android:verticalSpacing="2dp" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_row="1"
                        android:layout_column="1" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_row="2"
                        android:layout_column="1" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_row="3"
                        android:layout_column="1" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_row="4"
                        android:layout_column="1" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_row="5"
                        android:layout_column="1" />

                    <Spinner
                        android:id="@+id/spinLun"
                        style="@style/Selectores"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="2" />

                    <Spinner
                        android:id="@+id/spinMar"
                        style="@style/Selectores"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_column="2"
                        android:background="@color/colorGrisClaro" />

                    <Spinner
                        android:id="@+id/spinMie"
                        style="@style/Selectores"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_row="3"
                        android:layout_column="2" />

                    <Spinner
                        android:id="@+id/spinJue"
                        style="@style/Selectores"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_row="4"
                        android:layout_column="2"
                        android:background="@color/colorGrisClaro" />

                    <Spinner
                        android:id="@+id/spinVie"
                        style="@style/Selectores"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_row="5"
                        android:layout_column="2" />
                </GridLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botonGuardaCal"
        android:layout_width="83dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/colorPrimarioSuave"
        android:src="@drawable/aceptar" />
</RelativeLayout>