<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CrearCalendario">
    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="80dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/logoinicial"
            android:rotation="270"
            android:scaleType="fitCenter"
            android:scaleX="1.3"
            android:scaleY=".5"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:shadowColor="@color/colorPrimarioOscuro"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1.5"
        android:text="@string/txtCreacionCalendario"
        android:layout_marginTop="-60dp"
        android:textColor="@color/colorNegro"
        android:textSize="25sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="@string/txtSemana"
        android:textColor="@color/colorNegro"
        android:textSize="20sp"
        android:textStyle="italic|bold"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorClaro">
        <Spinner
            android:id="@+id/spinSemana"
            style="@style/SelectorSemana"
            android:layout_width="280dp"
            android:layout_height="35dp" />
    </RelativeLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:columnCount="3"
        android:rowCount="6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center"
            android:text="@string/txtMinuta"
            android:textColor="@color/colorNegro"
            android:textSize="20sp"
            android:textStyle="italic|bold" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_row="1"
            android:layout_column="0"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:padding="2dp"
            android:text="@string/txtLunes"
            android:textSize="20sp"
            android:verticalSpacing="2dp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@color/colorGrisClaro"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:padding="2dp"
            android:text="@string/txtMartes"
            android:textSize="20sp"
            android:verticalSpacing="2dp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_row="3"
            android:layout_column="0"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:padding="2dp"
            android:text="@string/txtMiercoles"
            android:textSize="20sp"
            android:verticalSpacing="2dp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_row="4"
            android:layout_column="0"
            android:background="@color/colorGrisClaro"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:padding="2dp"
            android:text="@string/txtJueves"
            android:textSize="20sp"
            android:verticalSpacing="2dp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_row="5"
            android:layout_column="0"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:padding="2dp"
            android:text="@string/txtViernes"
            android:textSize="20sp"
            android:verticalSpacing="2dp" />

        <View
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_row="1"
            android:layout_column="1" />

        <View
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_row="2"
            android:layout_column="1" />

        <View
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_row="3"
            android:layout_column="1" />

        <View
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_row="4"
            android:layout_column="1" />

        <View
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_row="5"
            android:layout_column="1" />

        <Spinner
            android:id="@+id/spinLun"
            style="@style/Selectores"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_row="1"
            android:layout_column="2" />

        <Spinner
            android:id="@+id/spinMar"
            style="@style/Selectores"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@color/colorGrisClaro" />

        <Spinner
            android:id="@+id/spinMie"
            style="@style/Selectores"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_row="3"
            android:layout_column="2" />

        <Spinner
            android:id="@+id/spinJue"
            style="@style/Selectores"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_row="4"
            android:layout_column="2"
            android:background="@color/colorGrisClaro" />

        <Spinner
            android:id="@+id/spinVie"
            style="@style/Selectores"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_row="5"
            android:layout_column="2" />
    </GridLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botonGuardaCal"
        android:layout_width="83dp"
        android:layout_height="59dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/colorPrimarioSuave"
        android:src="@drawable/aceptar" />
</LinearLayout>