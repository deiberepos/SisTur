<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/contenedor"
    android:gravity="center"
    tools:context=".Usuarios.LogueoUsuarios">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:background="@drawable/logoinicial" />
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:shadowColor="@color/colorClaro"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1.5"
                    android:text="Ingreso de usuarios"
                    android:textColor="@color/colorNegro"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_marginTop="25dp"
                    android:background="@drawable/personalizar_edit"
                    style="@style/edit"
                    android:id="@+id/editTextUsuario"
                    android:fontFamily="monospace"
                    android:textSize="15dp"
                    android:hint="usuario"
                    android:inputType="textPostalAddress"
                    android:paddingBottom="15dp"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:textColorHint="@color/colorPrimarioSuave"
                    android:textCursorDrawable="@color/colorNegro" />

                <EditText
                    android:id="@+id/editTextPassword"
                    android:background="@drawable/personalizar_edit"
                    style="@style/edit"
                    android:fontFamily="monospace"
                    android:hint="contraseÃ±a"
                    android:textSize="15dp"
                    android:inputType="textPassword"
                    android:paddingBottom="15dp"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:textColorHint="@color/colorPrimarioSuave"
                    android:textCursorDrawable="@color/colorNegro" />
                <Button
                    android:id="@+id/botonIngreso"
                    android:layout_width="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_height="40dp"
                    android:background="@drawable/personalizar_button"
                    android:text="Ingresar"
                    android:textAllCaps="false"
                    android:textColor="@color/colorClaro" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/barraProgreso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>