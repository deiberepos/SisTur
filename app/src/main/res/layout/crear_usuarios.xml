<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/contenedor"
    android:gravity="center"
    tools:context=".usuarios.CrearUsuarios">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="62dp"
                android:background="@drawable/logoinicial" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:shadowColor="@color/colorPrimarioOscuro"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1.5"
                    android:text="Creación de usuarios"
                    android:textColor="@color/colorNegro"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/TexviewsubTitulo"
                    android:textColor="@color/colorNegro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:text="Nombre Usuario:" />

                <EditText
                    android:id="@+id/editTextUsuario"
                    style="@style/edit"
                    android:fontFamily="monospace"
                    android:hint="Escriba nombre de usuario"
                    android:inputType="textPostalAddress"
                    android:maxLength="15"
                    android:paddingBottom="15dp"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:textCursorDrawable="@color/colorRojo"
                    android:textSize="15dp" />
                <TextView
                    style="@style/TexviewsubTitulo"
                    android:textColor="@color/colorNegro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Contraseña:" />

                <EditText
                    android:id="@+id/editTextPassword"
                    style="@style/edit"
                    android:fontFamily="monospace"
                    android:hint="Escriba aqui contraseña"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:paddingBottom="15dp"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:textCursorDrawable="@color/colorRojo"
                    android:textSize="15dp" />
                <TextView
                    style="@style/TexviewsubTitulo"
                    android:textColor="@color/colorNegro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=" Verifica Contraseña:" />

                <EditText
                    android:id="@+id/editTextVerificaPassword"
                    style="@style/edit"
                    android:fontFamily="monospace"
                    android:hint="verifica contraseña"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:paddingBottom="15dp"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:textCursorDrawable="@color/colorRojo"
                    android:textSize="15dp" />
                <TextView
                    style="@style/TexviewsubTitulo"
                    android:textColor="@color/colorNegro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Correo:" />

                <EditText
                    android:id="@+id/editTextCorreo"
                    style="@style/edit"
                    android:fontFamily="monospace"
                    android:hint="Escriba aqui direccion correo"
                    android:inputType="textEmailAddress"
                    android:maxLength="35"
                    android:paddingBottom="15dp"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:textCursorDrawable="@color/colorRojo"
                    android:textSize="15dp" />

                <TextView
                    style="@style/TexviewsubTitulo"
                    android:textColor="@color/colorNegro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Nombres y apelllidos:" />



                <EditText
                    android:id="@+id/editTextNombre"
                    style="@style/edit"
                    android:fontFamily="monospace"
                    android:hint="Escriba aqui nombre y apellido"
                    android:inputType="textPersonName"
                    android:maxLength="35"
                    android:paddingBottom="15dp"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:textCursorDrawable="@color/colorRojo"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="365dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="95dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:shadowColor="@color/colorClaro"
                        android:shadowDx="-2"
                        android:shadowDy="-2"
                        android:shadowRadius="1.5"
                        android:text="Rol"
                        android:textColor="@color/colorNegro"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rgRoles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:paddingEnd="15dp">

                        <RadioButton
                            android:id="@+id/rolgest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Gestor"
                            android:textColor="@color/colorPrimarioOscuro"
                            android:typeface="monospace"
                            app:buttonTint="@color/colorRojo" />

                        <RadioButton
                            android:id="@+id/rolcomp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Compras"
                            android:textColor="@color/colorPrimarioOscuro"
                            android:typeface="monospace"
                            app:buttonTint="@color/colorRojo" />

                        <RadioButton
                            android:id="@+id/rolbasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Básico"
                            android:textColor="@color/colorPrimarioOscuro"
                            android:typeface="monospace"
                            app:buttonTint="@color/colorRojo" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/botonRegistrar"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/personalizar_button"
                        android:text="Registrar Usuario"
                        android:textAllCaps="false"
                        android:textColor="@color/colorClaro" />
                    <Button
                        android:id="@+id/botonActualizar"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/personalizar_button"
                        android:text="Actualizar Usuario"
                        android:textAllCaps="false"
                        android:textColor="@color/colorClaro" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>