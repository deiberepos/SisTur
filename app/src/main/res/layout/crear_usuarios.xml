<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".usuarios.CrearUsuarios">

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/logoinicial"
            android:rotation="0"
            android:scaleType="fitCenter"
            android:scaleX="1"
            android:scaleY="1"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-35dp"
        android:shadowColor="@color/colorPrimarioOscuro"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1.5"
        android:text="@string/txtCreacionUsuarios"
        android:textColor="@color/colorNegro"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TexviewsubTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/txtNombreUsuario"
                android:textColor="@color/colorNegro" />

            <EditText
                android:id="@+id/editTextUsuario"
                style="@style/edit"
                android:fontFamily="monospace"
                android:hint="@string/txtHintNombreUsuario"
                android:inputType="textPostalAddress"
                android:maxLength="15"
                android:paddingBottom="15dp"
                android:textColor="@color/colorPrimarioOscuro"
                android:textCursorDrawable="@color/colorRojo"
                android:textSize="15sp" />

            <TextView
                style="@style/TexviewsubTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/txtContrase単a"
                android:textColor="@color/colorNegro" />

            <EditText
                android:id="@+id/editTextPassword"
                style="@style/edit"
                android:fontFamily="monospace"
                android:hint="@string/txtHintContrase単a"
                android:inputType="textPassword"
                android:maxLength="15"
                android:paddingBottom="15dp"
                android:textColor="@color/colorPrimarioOscuro"
                android:textCursorDrawable="@color/colorRojo"
                android:textSize="15sp" />

            <TextView
                style="@style/TexviewsubTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/txtVerificaContrase単a"
                android:textColor="@color/colorNegro" />

            <EditText
                android:id="@+id/editTextVerificaPassword"
                style="@style/edit"
                android:fontFamily="monospace"
                android:hint="@string/txtHintContrase単a"
                android:inputType="textPassword"
                android:maxLength="15"
                android:paddingBottom="15dp"
                android:textColor="@color/colorPrimarioOscuro"
                android:textCursorDrawable="@color/colorRojo"
                android:textSize="15sp" />

            <TextView
                style="@style/TexviewsubTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/txtCorreo"
                android:textColor="@color/colorNegro" />

            <EditText
                android:id="@+id/editTextCorreo"
                style="@style/edit"
                android:fontFamily="monospace"
                android:hint="@string/txtHintCorreo"
                android:inputType="textEmailAddress"
                android:maxLength="35"
                android:paddingBottom="15dp"
                android:textColor="@color/colorPrimarioOscuro"
                android:textCursorDrawable="@color/colorRojo"
                android:textSize="15sp" />

            <TextView
                style="@style/TexviewsubTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/txtNombreApellido"
                android:textColor="@color/colorNegro" />

            <EditText
                android:id="@+id/editTextNombre"
                style="@style/edit"
                android:fontFamily="monospace"
                android:hint="@string/txtHintNombreApellido"
                android:inputType="textPersonName"
                android:maxLength="35"
                android:textColor="@color/colorPrimarioOscuro"
                android:textCursorDrawable="@color/colorRojo"
                android:textSize="15sp" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="3"
                android:rowCount="4">

                <TextView
                    android:layout_width="180sp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:shadowColor="@color/colorClaro"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1.5"
                    android:text="@string/txtRol"
                    android:textColor="@color/colorNegro"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rgRoles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowSpan="3"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:background="@drawable/personalizar_edit"
                    android:paddingEnd="15dp">

                    <RadioButton
                        android:id="@+id/rolgest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/txtGestor"
                        android:textColor="@color/colorNegro"
                        android:typeface="monospace"
                        app:buttonTint="@color/colorRojo" />

                    <RadioButton
                        android:id="@+id/rolcomp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/txtCompras"
                        android:textColor="@color/colorNegro"
                        android:typeface="monospace"
                        app:buttonTint="@color/colorRojo" />

                    <RadioButton
                        android:id="@+id/rolbasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/txtBasico"
                        android:textColor="@color/colorNegro"
                        android:typeface="monospace"
                        app:buttonTint="@color/colorRojo" />
                </RadioGroup>

                <View
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_row="0"
                    android:layout_column="1" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_row="0"
                    android:layout_column="2" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_row="1"
                    android:layout_column="1" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_row="2"
                    android:layout_column="1" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_row="3"
                    android:layout_column="1" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_row="3"
                    android:layout_column="2" />

                <Button
                    android:id="@+id/botonRegistrar"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/personalizar_button"
                    android:text="@string/txtRegistrarUsuario"
                    android:textAllCaps="false"
                    android:textColor="@color/colorClaro" />

                <Button
                    android:id="@+id/botonActualizar"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:background="@drawable/personalizar_button"
                    android:text="@string/txtActualizaUsuario"
                    android:textAllCaps="false"
                    android:textColor="@color/colorClaro" />
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>