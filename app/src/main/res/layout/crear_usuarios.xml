<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/contenedor"
    android:gravity="center"
    tools:context=".usuarios.CrearUsuarios">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:background="@drawable/logoinicial" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:shadowColor="@color/colorPrimarioOscuro"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1.5"
                    android:text="Creaci칩n de usuarios"
                    android:textColor="@color/colorNegro"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextUsuario"
                    style="@style/edit"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/personalizar_edit"
                    android:fontFamily="monospace"
                    android:hint="usuario"
                    android:inputType="textPostalAddress"
                    android:maxLength="15"
                    android:paddingBottom="15dp"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:textColorHint="@color/colorPrimarioSuave"
                    android:textCursorDrawable="@color/colorRojo"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editTextPassword"
                    style="@style/edit"
                    android:background="@drawable/personalizar_edit"
                    android:fontFamily="monospace"
                    android:hint="contrase침a"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:paddingBottom="15dp"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:textColorHint="@color/colorPrimarioSuave"
                    android:textCursorDrawable="@color/colorRojo"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editTextVerificaPassword"
                    style="@style/edit"
                    android:background="@drawable/personalizar_edit"
                    android:fontFamily="monospace"
                    android:hint="verifica contrase침a"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:paddingBottom="15dp"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:textColorHint="@color/colorPrimarioSuave"
                    android:textCursorDrawable="@color/colorRojo"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editTextCorreo"
                    style="@style/edit"
                    android:background="@drawable/personalizar_edit"
                    android:fontFamily="monospace"
                    android:hint="correo"
                    android:inputType="textEmailAddress"
                    android:maxLength="35"
                    android:paddingBottom="15dp"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:textColorHint="@color/colorPrimarioSuave"
                    android:textCursorDrawable="@color/colorRojo"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editTextNombre"
                    style="@style/edit"
                    android:background="@drawable/personalizar_edit"
                    android:fontFamily="monospace"
                    android:hint="nombres y apellidos"
                    android:inputType="textPersonName"
                    android:maxLength="35"
                    android:paddingBottom="15dp"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:textColorHint="@color/colorPrimarioSuave"
                    android:textCursorDrawable="@color/colorRojo"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="260dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:shadowColor="@color/colorClaro"
                        android:shadowDx="-2"
                        android:shadowDy="-2"
                        android:shadowRadius="1.5"
                        android:text="Rol"
                        android:textColor="@color/colorNegro"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rgRoles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:paddingEnd="15dp">

                        <RadioButton
                            android:id="@+id/rolgest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Gestor"
                            android:textColor="@color/colorPrimarioOscuro"
                            android:typeface="monospace"
                            app:buttonTint="@color/colorRojo" />

                        <RadioButton
                            android:id="@+id/rolcomp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Compras"
                            android:textColor="@color/colorPrimarioOscuro"
                            android:typeface="monospace"
                            app:buttonTint="@color/colorRojo" />

                        <RadioButton
                            android:id="@+id/rolbasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="B치sico"
                            android:textColor="@color/colorPrimarioOscuro"
                            android:typeface="monospace"
                            app:buttonTint="@color/colorRojo" />
                    </RadioGroup>
                    <Button
                        android:id="@+id/botonRegistrar"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/personalizar_button"
                        android:text="Registrar Usuario"
                        android:textAllCaps="false"
                        android:textColor="@color/colorClaro" />
                    <Button
                        android:id="@+id/botonActualizar"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/personalizar_button"
                        android:text="Actualizar Usuario"
                        android:textAllCaps="false"
                        android:textColor="@color/colorClaro" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                </LinearLayout>

            </LinearLayout>


            <ProgressBar
                android:id="@+id/barraProgreso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>