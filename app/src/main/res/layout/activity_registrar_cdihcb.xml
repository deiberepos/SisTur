                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:shadowColor="@color/colorClaro"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1.5"
                    android:layout_marginStart="15dp"
                    android:text="@string/txtCreacionCDI"
                    android:textColor="@color/colorNegro"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/idtvtvnombreCentro"
                    style="@style/TexviewsubTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nombre_asignado" />

                <EditText
                    android:id="@+id/idedtnombreregCentro"
                    style="@style/edit"
                    android:layout_width="match_parent"
                    android:hint="@string/txtHintNombreCDI" />

                <TextView
                    style="@style/TexviewsubTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/txtTipoCDI"
                    android:textColor="@color/colorNegro" />

                <RadioGroup
                    android:id="@+id/idrgUbicaRegCDI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorRojo"
                    android:orientation="horizontal"
                    android:typeface="monospace">

                    <RadioButton
                        android:id="@+id/idrbCentro"
                        style="@style/TexviewsubTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorRojo"
                        android:text="@string/txtRbCentroDesarrollo"
                        android:typeface="monospace" />

                    <RadioButton
                        android:id="@+id/idrbHogar"
                        style="@style/TexviewsubTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorRojo"
                        android:text="@string/txtRbHogarComunitario"
                        android:typeface="monospace" />
                </RadioGroup>

                <TextView
                    style="@style/TexviewsubTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/txtUbicacion"
                    android:textColor="@color/colorNegro" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorClaro">
                <Spinner
                    android:gravity="center"
                    android:layout_width="280dp"
                    android:layout_height="30dp"
                    style="@style/SelectorSemana"
                    android:id="@+id/idspnVeredas"/>
            </RelativeLayout>
            <View
