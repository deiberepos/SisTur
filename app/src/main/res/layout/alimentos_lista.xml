<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="10dp"
    android:paddingBottom="10dp"
    android:padding="10dp"
    tools:context=".ListarPlanAlimenticio">

    <LinearLayout

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:layout_marginEnd="2dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <View
            android:layout_width="10dp"
            android:layout_height="0dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/lytImagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgSeleccionaA"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:id="@+id/txtCodigoA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/txtCodigo"
                    android:textColor="@color/colorAzulOscuro3"
                    android:textSize="14sp"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtGrupoA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:typeface="sans"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/txtNombreGrupo"
                    />
                <TextView
                    android:id="@+id/txtNombreA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/txtNombreAlimento"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:textColor="@color/colorNegro"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/txtARegional"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/txtNombreRegional"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:typeface="sans"
                    android:textColor="@color/colorRojo"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>