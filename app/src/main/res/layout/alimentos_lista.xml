<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorGrisClaro"
    app:cardCornerRadius="10dp"
    app:contentPadding="2dp"
    android:paddingBottom="8dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="2dp"
    tools:context=".ListarPlanAlimenticio">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/colorBlanco">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/txtCodigoA"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/txtCodigo"
                android:textColor="@color/colorAzulOscuro3"
                android:textSize="14sp"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/txtCodigoA"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtGrupoA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:typeface="sans"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/txtNombreGrupo"
                    />
                <TextView
                    android:id="@+id/txtNombreA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:text="@string/txtNombreAlimento"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:textColor="@color/colorNegro"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/txtARegional"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:text="@string/txtNombreRegional"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:typeface="sans"
                    android:textColor="@color/colorRojo"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>