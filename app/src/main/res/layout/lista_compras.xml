<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CompraGaleria">
    <ImageView
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:background="@drawable/logoinicial"
        android:layout_gravity="left"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:shadowColor="@color/colorPrimarioOscuro"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1.5"
        android:text="Compra en GalerÃ­a"
        android:textColor="@color/colorNegro"
        android:layout_marginTop="-70dp"
        android:textSize="25dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="SEMANA"
        android:textSize="20dp"
        android:textColor="@color/colorNegro"
        android:textStyle="italic|bold"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorClaro">
        <Spinner
            android:id="@+id/spinSemana"
            android:layout_width="280dp"
            android:layout_height="35dp"
            style="@style/SelectorSemana"
            />
    </RelativeLayout>
    <EditText
        android:id="@+id/editFechaCompra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="fecha de compra"
        android:layout_gravity="center"
        style="@style/IngresoDatos"
        android:onClick="mostrarCalendario"
        />
    <TextView
        android:id="@+id/tituloLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Listado de Productos"
        android:textColor="@color/colorNegro"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textStyle="italic|bold" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/titulo1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Producto"
            android:gravity="center"
            android:textColor="@color/colorNegro"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/titulo2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Und."
            android:gravity="center"
            android:textColor="@color/colorNegro"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/titulo1"
            />
        <TextView
            android:id="@+id/titulo3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Cant."
            android:gravity="center"
            android:textColor="@color/colorNegro"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/titulo2"
            />
        <TextView
            android:id="@+id/titulo4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Valor Unidad"
            android:gravity="center"
            android:textColor="@color/colorNegro"
            android:textStyle="bold"
            android:layout_toRightOf="@id/titulo3"
            />
        <TextView
            android:id="@+id/titulo5"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Costo Total"
            android:gravity="center"
            android:textColor="@color/colorNegro"
            android:textStyle="bold"
            android:layout_toRightOf="@id/titulo4"
            />
        <ListView
            android:id="@+id/listaCompras"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@id/titulo1"
            />
        <Button
            android:id="@+id/botonGuardaGal"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/personalizar_button"
            android:layout_gravity="center_horizontal"
            android:text="Guardar"
            android:textAllCaps="false"
            android:textColor="@color/colorClaro"
            android:layout_below="@id/listaCompras"
            />
    </RelativeLayout>
</LinearLayout>