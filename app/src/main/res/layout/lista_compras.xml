<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CompraGaleria">
    <ImageView
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:background="@drawable/logoinicial"
        android:layout_gravity="start"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:shadowColor="@color/colorPrimarioOscuro"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1.5"
        android:text="@string/txtCompraGaleria"
        android:textColor="@color/colorNegro"
        android:layout_marginTop="-70dp"
        android:textSize="25sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="@string/txtSemana"
        android:textSize="18sp"
        android:textColor="@color/colorNegro"
        android:textStyle="italic|bold"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorClaro">
        <Spinner
            android:id="@+id/selectorSemana"
            android:layout_width="280dp"
            android:layout_height="30dp"
            style="@style/SelectorSemana"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/textoFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:text="@string/txtFechaCompra"
            android:textSize="14sp"
            android:textColor="@color/colorNegro"
            android:textStyle="italic|bold"
            />
        <EditText
            android:id="@+id/editFechaCompra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/txtHintSeleccionFecha"
            android:layout_gravity="center"
            style="@style/IngresoDatos"
            android:onClick="mostrarCalendario"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/textoFecha"
            />
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="6"
        android:rowCount="6">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/txtIngredientesComprar"
            android:textColor="@color/colorAzulOscuro2"
            android:textSize="12sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/txtTotalIngredientes"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="@string/txt0"
            android:textColor="@color/colorRojo"
            android:textSize="15sp"
            android:textStyle="italic|bold" />

        <View
            android:layout_width="6dp"
            android:layout_height="20dp"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/txtIngredientesComprados"
            android:textColor="@color/colorAzulOscuro2"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/txtSubconteoIngredientes"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="@string/txt0"
            android:textColor="@color/colorRojo"
            android:textSize="15sp"
            android:textStyle="italic|bold" />

        <View
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="3"
            android:layout_gravity="center" />

        <View
            android:layout_width="6dp"
            android:layout_height="2dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center"
            android:text="@string/txtTotalComprado"
            android:textColor="@color/colorAzulOscuro3"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/txtValorCompra"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="@string/txt0"
            android:textColor="@color/colorRojo"
            android:textSize="16sp"
            android:textStyle="italic|bold" />


        <View
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:layout_column="3"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/botonCalcular"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="4"
            android:layout_gravity="center"
            android:background="@drawable/personalizar_button"
            android:gravity="center"
            android:text="@string/txtBtnCalcular"
            android:textAllCaps="false"
            android:textColor="@color/colorClaro" />

        <Button
            android:id="@+id/botonGuardaGal"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:layout_column="4"
            android:layout_gravity="center"
            android:background="@drawable/personalizar_button"
            android:gravity="center"
            android:text="@string/txtBtnGuardar2"
            android:textAllCaps="false"
            android:textColor="@color/colorClaro" />
    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorNegro"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/titulo1"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="@string/txtProducto"
            android:gravity="start"
            android:textColor="@color/colorNegro"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:paddingRight="10dp"
            />
        <TextView
            android:id="@+id/titulo2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/txtUnd"
            android:gravity="center"
            android:textColor="@color/colorNegro"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/titulo1"
            />
        <TextView
            android:id="@+id/titulo3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/txtCant"
            android:gravity="center"
            android:textColor="@color/colorNegro"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/titulo2"
            />
        <TextView
            android:id="@+id/titulo4"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="@string/txtValorUnidad"
            android:gravity="center"
            android:textColor="@color/colorNegro"
            android:textStyle="bold"
            android:lines="2"
            android:layout_toEndOf="@id/titulo3"
            />
        <TextView
            android:id="@+id/titulo5"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="@string/txtCostoTotal"
            android:gravity="center"
            android:textColor="@color/colorNegro"
            android:textStyle="bold"
            android:lines="2"
            android:layout_toEndOf="@id/titulo4"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorNegro"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/titulo1"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerCompras"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="5dp"
            android:layout_marginTop="40dp" />

        <View
            android:id="@+id/lineaFinal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorNegro"
            android:layout_marginTop="10dp"
            android:layout_below="@id/recyclerCompras"
            />
    </RelativeLayout>
</LinearLayout>