<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CompraGaleria">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/itemLista"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorVerde"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:fontFamily="sans-serif-condensed"
                android:lines="1"
                android:text="100."/>
            <TextView
                android:id="@+id/listaProducto"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorNegro"
                android:gravity="center_vertical"
                android:lines="3"
                android:text="Producto"/>

            <TextView
                android:id="@+id/listaUnidad"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorNegro"
                android:gravity="center"
                android:lines="2"
                android:text="Und."/>
            <TextView
                android:id="@+id/listaCantidad"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:lines="2"
                android:textColor="@color/colorNegro"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Cant."/>

            <EditText
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/editValor"
                android:textColor="@color/colorRojo"
                android:text="valor"
                android:gravity="right"
                android:inputType="number"
                android:layout_gravity="center_vertical"
                android:textStyle="bold|italic"
                android:textSize="18dp"
                android:maxLength="6"
                android:selectAllOnFocus="true"
                />
            <TextView
                android:id="@+id/listaTotal"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAzulOscuro3"
                android:text="Total"
                android:gravity="right"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"
                android:maxLength="6"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorNaranja"
        android:layout_below="@id/card_view"
        />
</RelativeLayout>