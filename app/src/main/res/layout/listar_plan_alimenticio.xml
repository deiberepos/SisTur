<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lytPadre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alimentos.ListarPlanAlimenticio">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            >
            <EditText
                android:id="@+id/editBuscar"
                style="@style/IngresoBuscar"
                android:hint="Buscar..."
                />
            <View
                android:id="@+id/separador1"
                android:layout_width="3dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/editBuscar"
                />
            <Button
                android:id="@+id/btnBuscarS"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_buscar"
                android:layout_toRightOf="@id/separador1"
                android:layout_marginTop="8dp"
                />
            <View
                android:id="@+id/separador2"
                android:layout_width="5dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/btnBuscarS"
                />
            <Button
                android:id="@+id/btnGuardarS"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/separador2"
                android:background="@drawable/personalizar_button"
                android:layout_marginTop="8dp"
                android:text="Guardar selecciÃ³n"
                android:textAllCaps="false"
                android:textColor="@color/colorClaro"
                android:textSize="10dp" />

            <View
                android:id="@+id/separador3"
                android:layout_width="5dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/btnGuardarS"
                />
            <Button
                android:id="@+id/btnVolverS"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/personalizar_button"
                android:textAllCaps="false"
                android:textColor="@color/colorClaro"
                android:text="Volver"
                android:layout_toRightOf="@+id/separador3"
                />
            <TextView
                android:id="@+id/txtAlimentos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Alimentos seleccionados: "
                android:textAllCaps="false"
                android:textColor="@color/colorNegro"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/editBuscar"
                />
            <TextView
                android:id="@+id/numSeleccionados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLength="3"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="000"
                android:textColor="@color/colorRojo"
                android:layout_toRightOf="@+id/txtAlimentos"
                android:layout_below="@+id/editBuscar"
                />
            <TextView
                android:id="@+id/txtDe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=" de "
                android:layout_marginTop="2dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorNegro"
                android:layout_toRightOf="@id/numSeleccionados"
                android:layout_below="@+id/editBuscar"
                />
            <TextView
                android:id="@+id/numAlimentos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="3"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:text="000"
                android:textSize="14dp"
                android:paddingRight="8dp"
                android:textColor="@color/colorRojo"
                android:layout_toRightOf="@+id/txtDe"
                android:layout_below="@+id/editBuscar"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerListaA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scrollbars="vertical"
            />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>