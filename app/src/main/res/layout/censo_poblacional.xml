<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CensoPoblacional">
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/logoinicial"
            android:rotation="0"
            android:scaleType="fitCenter"
            android:scaleX="1"
            android:scaleY="1"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:shadowColor="@color/colorClaro"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1.5"
        android:text="@string/txtCensoPoblacional"
        android:layout_marginTop="-35dp"
        android:textColor="@color/colorNegro"
        android:textSize="25sp"
        android:textStyle="bold" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                style="@style/TexviewsubTitulo"
                android:textColor="@color/colorNegro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/txtNumeroRegistro" />
            <EditText
                android:id="@+id/registroinfante"
                style="@style/edit"
                android:inputType="number"
                android:layout_height="35dp"
                android:fontFamily="monospace"
                android:hint="@string/txtHintNumeroRegistro"
                android:textColor="@color/colorPrimarioOscuro"
                android:textSize="14sp" />
            <TextView
                style="@style/TexviewsubTitulo"
                android:textColor="@color/colorNegro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/txtNombreInfante2" />

            <EditText
                android:id="@+id/nombreinfante"
                style="@style/edit"
                android:layout_height="35dp"
                android:fontFamily="monospace"
                android:hint="@string/txtHintNombre"
                android:textColor="@color/colorPrimarioOscuro"
                android:textSize="14sp" />
            <TextView
                style="@style/TexviewsubTitulo"
                android:textColor="@color/colorNegro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/txtApellidoInfante" />

            <EditText
                android:id="@+id/apellidoinfante"
                style="@style/edit"
                android:fontFamily="monospace"
                android:layout_height="35dp"
                android:hint="@string/txtHintApellido"
                android:textColor="@color/colorPrimarioOscuro"
                android:textSize="14sp" />
            <TextView
                style="@style/TexviewsubTitulo"
                android:textColor="@color/colorNegro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/txtGenero" />

            <RadioGroup
                android:id="@+id/radiogenero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <RadioButton
                    style="@style/TexviewsubTitulo"
                    android:id="@+id/masculino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtMasculino"
                    android:textColor="@color/colorNegro"
                    android:typeface="monospace"
                    android:textSize="12sp"
                    app:buttonTint="@color/colorRojo" />

                <RadioButton
                    style="@style/TexviewsubTitulo"
                    android:id="@+id/femenino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtFemenino"
                    android:textColor="@color/colorNegro"
                    android:typeface="monospace"
                    android:textSize="12sp"
                    app:buttonTint="@color/colorRojo" />
            </RadioGroup>
            <TextView
                style="@style/TexviewsubTitulo"
                android:textColor="@color/colorNegro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/txtFechaNacimiento" />
            <EditText
                android:id="@+id/fecha"
                android:layout_width="217dp"
                android:layout_gravity="center"
                android:ems="20"
                android:gravity="center"
                android:hint="@string/txtHintFecha"
                android:layout_height="38dp"
                android:textSize="14sp"
                android:onClick="mostrarCalendario"/>
            <TextView
                style="@style/TexviewsubTitulo"
                android:textColor="@color/colorNegro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/txtObservaciones" />

            <EditText
                android:id="@+id/editobsrvaciones"
                style="@style/edit"
                android:layout_width="388dp"
                android:layout_height="75dp"
                android:fontFamily="monospace"
                android:hint="@string/txtHintObservaciones"
                android:lines="3"
                android:textColor="@color/colorPrimarioOscuro"
                android:textSize="14sp" />
            <TextView
                style="@style/TexviewsubTitulo"
                android:textColor="@color/colorNegro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/txtCentro" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorClaro">
                <Spinner
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/spiner"
                    android:layout_width="280dp"
                    android:layout_height="30dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"/>

            <TextView
                style="@style/TexviewsubTitulo"
                android:textColor="@color/colorNegro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/txtNombrePadre" />
            <EditText
                android:id="@+id/nom_ape_padre"
                style="@style/edit"
                android:fontFamily="monospace"
                android:layout_height="35dp"
                android:hint="@string/txtHintNombrePadre"
                android:textColor="@color/colorPrimarioOscuro"
                android:textSize="14sp" />
            <TextView
                style="@style/TexviewsubTitulo"
                android:textColor="@color/colorNegro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/txtTelefonoPadre" />
            <EditText
                android:id="@+id/telefonopadre"
                style="@style/edit"
                android:layout_height="35dp"
                android:fontFamily="monospace"
                android:hint="@string/txtHintTelefonoPadre"
                android:inputType="number"
                android:textColor="@color/colorPrimarioOscuro"
                android:textSize="14sp" />
            <TextView
                style="@style/TexviewsubTitulo"
                android:textColor="@color/colorNegro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/txtDireccionPadre" />
            <EditText
                android:id="@+id/direccionpadre"
                style="@style/edit"
                android:fontFamily="monospace"
                android:layout_height="35dp"
                android:hint="@string/txtHintDireccionPadre"
                android:textColor="@color/colorPrimarioOscuro"
                android:textSize="14sp" />
            <TextView
                style="@style/TexviewsubTitulo"
                android:textColor="@color/colorNegro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/txtNombreMadre" />

            <EditText
                android:id="@+id/nom_ape_madre"
                style="@style/edit"
                android:fontFamily="monospace"
                android:layout_height="35dp"
                android:hint="@string/txtHintNombreMadre"
                android:textColor="@color/colorPrimarioOscuro"
                android:textSize="14sp" />
            <TextView
                style="@style/TexviewsubTitulo"
                android:textColor="@color/colorNegro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/txtTelefonoMadre" />

            <EditText
                android:id="@+id/telefonomadre"
                style="@style/edit"
                android:layout_height="35dp"
                android:fontFamily="monospace"
                android:hint="@string/txtHintTelefonoMadre"
                android:inputType="number"
                android:textColor="@color/colorPrimarioOscuro"
                android:textSize="14sp" />

            <TextView
                style="@style/TexviewsubTitulo"
                android:textColor="@color/colorNegro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/txtDireccionMadre" />
            <EditText
                android:id="@+id/direccionmadre"
                style="@style/edit"
                android:fontFamily="monospace"
                android:layout_height="35dp"
                android:hint="@string/txtHintDireccionMadre"
                android:textColor="@color/colorPrimarioOscuro"
                android:textSize="14sp" />

            <CheckBox
                android:textSize="20sp"
                android:id="@+id/chekactivo"
                android:layout_gravity="center"
                android:text="@string/txtActivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginTop="12dp"
                android:id="@+id/btnguardarcenso"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/personalizar_button"
                android:text="@string/txtBtnGuardar"
                android:textAllCaps="false"
                android:textColor="@color/colorClaro" />
            <Button
                android:id="@+id/btnactualizar"
                android:layout_marginTop="12dp"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/personalizar_button"
                android:text="@string/txtBtnActualizar"
                android:textColor="@color/colorClaro" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
