<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".CensoPoblacional">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/logoSistur"
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:background="@drawable/logoinicial" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:shadowColor="@color/colorClaro"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:shadowRadius="1.5"
                android:text="Censo Poblacional"
                android:textColor="@color/colorNegro"
                android:textSize="25dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/registroinfante"
                style="@style/edit"
                android:inputType="number"
                android:layout_height="42dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/personalizar_edit"
                android:fontFamily="monospace"
                android:hint="Registro del infante"
                android:textColor="@color/colorPrimarioOscuro"
                android:textColorHint="@color/colorPrimarioSuave"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/nombreinfante"
                style="@style/edit"
                android:layout_height="42dp"
                android:background="@drawable/personalizar_edit"
                android:fontFamily="monospace"
                android:hint="Nombres del infante"
                android:textColor="@color/colorPrimarioOscuro"
                android:textColorHint="@color/colorPrimarioSuave"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/apellidoinfante"
                style="@style/edit"
                android:background="@drawable/personalizar_edit"
                android:fontFamily="monospace"
                android:hint="Apellidos del infante"
                android:textColor="@color/colorPrimarioOscuro"
                android:textColorHint="@color/colorPrimarioSuave"
                android:textSize="15dp" />

            <RadioGroup
                android:id="@+id/radiogenero"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/masculino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masculino"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:typeface="monospace"
                    app:buttonTint="@color/colorRojo" />

                <RadioButton
                    android:id="@+id/femenino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Femenino"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:typeface="monospace"
                    app:buttonTint="@color/colorRojo" />
            </RadioGroup>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/fecha"
                    android:layout_width="217dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ems="20"
                    android:gravity="center"
                    android:hint="Agrega la fecha"
                    android:onClick="mostrarCalendario"></EditText>

                <EditText


                    android:id="@+id/editobsrvaciones"
                    style="@style/edit"
                    android:layout_width="318dp"
                    android:layout_height="88dp"
                    android:background="@drawable/personalizar_edit"
                    android:fontFamily="monospace"
                    android:hint="Observaciones"
                    android:lines="3"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:textColorHint="@color/colorPrimarioSuave"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:text="sleccione el centro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/spiner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/nom_ape_padre"
                style="@style/edit"
                android:background="@drawable/personalizar_edit"
                android:fontFamily="monospace"
                android:hint="Nombres/apellidos Padre"
                android:textColor="@color/colorPrimarioOscuro"
                android:textColorHint="@color/colorPrimarioSuave"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/telefonopadre"
                style="@style/edit"
                android:layout_height="36dp"
                android:background="@drawable/personalizar_edit"
                android:fontFamily="monospace"
                android:hint="Teléfono del Padre"
                android:inputType="number"
                android:textColor="@color/colorPrimarioOscuro"
                android:textColorHint="@color/colorPrimarioSuave"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/direccionpadre"
                style="@style/edit"
                android:background="@drawable/personalizar_edit"
                android:fontFamily="monospace"
                android:hint="Direccion del Padre"
                android:textColor="@color/colorPrimarioOscuro"
                android:textColorHint="@color/colorPrimarioSuave"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/nom_ape_madre"
                style="@style/edit"
                android:background="@drawable/personalizar_edit"
                android:fontFamily="monospace"
                android:hint="Nombres/apellisdos madre"
                android:textColor="@color/colorPrimarioOscuro"
                android:textColorHint="@color/colorPrimarioSuave"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/telefonomadre"
                style="@style/edit"
                android:layout_height="47dp"
                android:background="@drawable/personalizar_edit"
                android:fontFamily="monospace"
                android:hint="Teléfono de la Madre"
                android:inputType="number"
                android:textColor="@color/colorPrimarioOscuro"
                android:textColorHint="@color/colorPrimarioSuave"
                android:textSize="15dp" />


            <EditText
                android:id="@+id/direccionmadre"
                style="@style/edit"
                android:background="@drawable/personalizar_edit"
                android:fontFamily="monospace"
                android:hint="Dirección de la Madre"
                android:textColor="@color/colorPrimarioOscuro"
                android:textColorHint="@color/colorPrimarioSuave"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/chekactivo"
                android:layout_gravity="center"
                android:text="activo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnguardarcenso"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/personalizar_button"
                android:text="GUARDAR"
                android:textAllCaps="false"
                android:textColor="@color/colorClaro" />
            <Button
                android:id="@+id/btnactualizar"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/personalizar_button"
                android:text="ACTUALIZAR"
                android:textColor="@color/colorClaro" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
