<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".CensoPoblacional">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/logoSistur"
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:background="@drawable/logoinicial" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center"
                android:shadowColor="@color/colorClaro"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:shadowRadius="1.5"
                android:textColor="@color/colorNegro"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Censo Poblacional"/>

            <EditText
                android:layout_marginTop="30dp"
                android:id="@+id/nombreinfante"
                style="@style/edit"
                android:layout_height="42dp"
                android:background="@drawable/personalizar_edit"
                android:fontFamily="monospace"
                android:hint="Nombres del infante"
                android:textColor="@color/colorPrimarioOscuro"
                android:textColorHint="@color/colorPrimarioSuave"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/apellidoinfante"
                style="@style/edit"
                android:background="@drawable/personalizar_edit"
                android:fontFamily="monospace"
                android:hint="Apellidos del infante"
                android:textColor="@color/colorPrimarioOscuro"
                android:textColorHint="@color/colorPrimarioSuave"
                android:textSize="15dp" />

            <RadioGroup
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/masculino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:typeface="monospace"
                    app:buttonTint="@color/colorRojo"
                    android:text="Masculino" />

                <RadioButton
                    android:id="@+id/femenino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:typeface="monospace"
                    app:buttonTint="@color/colorRojo"
                    android:text="Femenino" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:layout_width="140dp"
                    android:layout_height="223dp"
                    android:layout_weight="1"
                    android:layout_x="7dp"
                    android:layout_y="14dp" />
                <CalendarView
                    android:layout_width="248dp"
                    android:layout_height="221dp"
                    android:layout_weight="1"
                    android:layout_x="147dp"
                    android:layout_y="16dp" />

            </LinearLayout>
            <EditText


                android:background="@drawable/personalizar_edit"
                style="@style/edit"
                android:id="@+id/editobsrvaciones"
                android:fontFamily="monospace"
                android:hint="Observaciones"
                android:lines="3"
                android:textColor="@color/colorPrimarioOscuro"
                android:textColorHint="@color/colorPrimarioSuave"
                android:textSize="15dp"
                />
            <EditText
                android:background="@drawable/personalizar_edit"
                style="@style/edit"
                android:id="@+id/nom_ape_padre"
                android:hint="Nombres/apellidos Padre"
                android:textColorHint="@color/colorPrimarioSuave"
                android:textColor="@color/colorPrimarioOscuro"
                android:fontFamily="monospace"
                android:textSize="15dp"
                />
            <EditText
                android:background="@drawable/personalizar_edit"
                style="@style/edit"
                android:id="@+id/telefonopadre"
                android:hint="Teléfono del Padre"
                android:textColorHint="@color/colorPrimarioSuave"
                android:textColor="@color/colorPrimarioOscuro"
                android:fontFamily="monospace"
                android:textSize="15dp"
                />

            <EditText
                android:background="@drawable/personalizar_edit"
                style="@style/edit"
                android:id="@+id/direccionpadre"
                android:hint="Direccion del Padre"
                android:textColorHint="@color/colorPrimarioSuave"
                android:textColor="@color/colorPrimarioOscuro"
                android:fontFamily="monospace"
                android:textSize="15dp"
                android:text="Dirección del Padre"
                 />

            <EditText
                android:background="@drawable/personalizar_edit"
                style="@style/edit"
                android:id="@+id/nom_ape_madre"
                android:textColorHint="@color/colorPrimarioSuave"
                android:textColor="@color/colorPrimarioOscuro"
                android:fontFamily="monospace"
                android:textSize="15dp"
                android:text="Nombres/apellidos Madre"
                />

            <EditText
                android:background="@drawable/personalizar_edit"
                style="@style/edit"
                android:id="@+id/telefonomadre"
                android:textColorHint="@color/colorPrimarioSuave"
                android:textColor="@color/colorPrimarioOscuro"
                android:fontFamily="monospace"
                android:textSize="15dp"
                android:text="Teléfono de la Madre"
                />

            <EditText
                android:background="@drawable/personalizar_edit"
                style="@style/edit"
                android:id="@+id/direccionmadre"
                android:textColorHint="@color/colorPrimarioSuave"
                android:textColor="@color/colorPrimarioOscuro"
                android:fontFamily="monospace"
                android:textSize="15dp"
                android:text="Dirección de la Madre"
                 />
            <Button
                android:id="@+id/btnguardarcenso"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button_solid"
                android:text="Guardar"
                android:textAllCaps="false"
                android:textColor="@color/colorClaro"
/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
