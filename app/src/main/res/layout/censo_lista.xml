<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".CensoLista">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/fondouser">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgModificaCenso"
                    android:layout_width="53dp"
                    android:layout_height="62dp"
                    android:layout_marginStart="18dp"
                    android:src="@mipmap/usuarios" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtRegistro"
                        android:layout_width="235dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:lines="2"
                        android:lineSpacingExtra="2dp"
                        android:maxLines="2"
                        android:singleLine="true"
                        android:text="@string/txtRegistroCivil"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorAzulOscuro3"
                        android:textSize="14sp"
                        android:textStyle="italic" />
                    <TextView
                        android:id="@+id/txtNombreInfante"
                        android:layout_width="235dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="monospace"
                        android:lines="2"
                        android:maxLines="2"
                        android:singleLine="true"
                        android:text="@string/txtNombreInfante"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorAzulOscuro3"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:id="@+id/txtCentro"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:singleLine="true"
                        android:text="@string/txtNombreCDIH"
                        android:textStyle="normal"
                        android:textColor="@color/colorRojo"
                        android:textSize="14sp"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>


