<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublicarMinutas">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:background="@drawable/logoinicial"
            android:layout_gravity="left"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:shadowColor="@color/colorPrimarioOscuro"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="1.5"
            android:text="Publicación de Minutas"
            android:textColor="@color/colorNegro"
            android:layout_marginTop="-70dp"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="SEMANA"
            android:textSize="18dp"
            android:textColor="@color/colorNegro"
            android:textStyle="italic|bold"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorClaro">
            <Spinner
                android:id="@+id/spinPublicarSemana"
                android:layout_width="280dp"
                android:layout_height="30dp"
                style="@style/SelectorSemana"
                />
        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/lytSemana"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:rowCount="4"
                android:columnCount="5"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="LUNES"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/colorAzulOscuro3"
                    android:textColor="@color/colorAmarillo"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:id="@+id/fechaLunes"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="00/00/2019"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorRojo"
                    android:textSize="14dp"
                    />
                <TextView
                    android:id="@+id/minutaLunes"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="Minuta M01"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:textColor="@color/colorNegro"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listaLunes"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_row="3"
                    android:layout_column="0"
                    />
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="MARTES"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/colorAzulOscuro3"
                    android:textColor="@color/colorAmarillo"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:id="@+id/fechaMartes"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="00/00/2019"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorRojo"
                    android:textSize="14dp"
                    />
                <TextView
                    android:id="@+id/minutaMartes"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="Minuta M02"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:textColor="@color/colorNegro"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listaMartes"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_row="3"
                    android:layout_column="1"
                    />
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="MIÉRCOLES"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/colorAzulOscuro3"
                    android:textColor="@color/colorAmarillo"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:id="@+id/fechaMiércoles"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="00/00/2019"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorRojo"
                    android:textSize="14dp"
                    />
                <TextView
                    android:id="@+id/minutaMiercoles"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="Minuta M03"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:textColor="@color/colorNegro"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listaMiercoles"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_row="3"
                    android:layout_column="2"
                    />
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="JUEVES"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/colorAzulOscuro3"
                    android:textColor="@color/colorAmarillo"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:id="@+id/fechaJueves"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="00/00/2019"
                    android:layout_column="3"
                    android:layout_row="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorRojo"
                    android:textSize="14dp"
                    />
                <TextView
                    android:id="@+id/minutaJueves"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="Minuta M04"
                    android:layout_column="3"
                    android:layout_row="2"
                    android:textColor="@color/colorNegro"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listarJueves"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_row="3"
                    android:layout_column="3"
                    />
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="VIERNES"
                    android:layout_column="4"
                    android:layout_row="0"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/colorAzulOscuro3"
                    android:textColor="@color/colorAmarillo"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:id="@+id/fechaViernes"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="00/00/2019"
                    android:layout_column="4"
                    android:layout_row="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorRojo"
                    android:textSize="14dp"
                    />
                <TextView
                    android:id="@+id/minutaViernes"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="Minuta M05"
                    android:layout_column="4"
                    android:layout_row="2"
                    android:textColor="@color/colorNegro"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listaViernes"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_row="3"
                    android:layout_column="4"
                    />
            </GridLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>