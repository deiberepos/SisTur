<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorGrisClaro"
    app:cardCornerRadius="10dp"
    app:contentPadding="2dp"
    android:paddingBottom="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    tools:context=".usuarios.ListarUsuarios">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        android:layout_gravity="center"
        android:padding="5dp"
        app:cardBackgroundColor="@color/colorBlanco">>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/imgModifica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/usuarios" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imgModifica"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtNombres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:typeface="sans"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimarioOscuro"
                    android:lines="2"
                    android:lineSpacingExtra="2dp"
                    android:singleLine="true"
                    android:text="@string/txtNombresUsuario"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="normal" />
                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/txtUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:textColor="@color/colorNegro"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/txtNombreUser"
                    />
                <TextView
                    android:id="@+id/txtRol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:typeface="sans"
                    android:textColor="@color/colorRojo"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/txtRol"
                    />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>
