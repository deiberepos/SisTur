<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    tools:context=".Usuarios.UsuariosLista">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center">
        <LinearLayout
            android:id="@+id/layTextos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtNombres"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="monospace"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/txtUsuario"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="monospace"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/txtRol"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="monospace"
                android:textSize="15dp"
                android:textStyle="italic"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgModifica"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/layTextos" />

        <ImageView
            android:id="@+id/imgElimina"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/imgModifica" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>