<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".usuarios.ListarUsuarios">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/fondouser">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgModifica"
                    android:layout_width="53dp"
                    android:layout_height="62dp"
                    android:layout_marginStart="18dp"

                    android:src="@mipmap/usuarios" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtNombres"
                        android:layout_width="235dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="90dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:typeface="sans"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimarioOscuro"
                        android:lines="2"
                        android:lineSpacingExtra="2dp"
                        android:singleLine="true"
                        android:text="@string/txtNombresUsuario"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textStyle="normal" />

                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:id="@+id/txtUsuario"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:textColor="@color/colorNegro"
                        android:textSize="16sp"
                        android:layout_marginStart="90dp"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/txtNombreUser"
                        />
                    <TextView
                        android:id="@+id/txtRol"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="90dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:typeface="sans"
                        android:textColor="@color/colorRojo"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/txtRol"
                        />
                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
