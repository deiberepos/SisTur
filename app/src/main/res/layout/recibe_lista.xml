<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EntregaGaleria">
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/itemListaE"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorAzulOscuro2"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:fontFamily="sans-serif-condensed"
                android:lines="1"
                android:text="*"/>
            <TextView
                android:id="@+id/listaProductoE"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorNegro"
                android:gravity="center_vertical"
                android:lines="3"
                android:text="Producto"/>

            <TextView
                android:id="@+id/listaUnidadE"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorAzulOscuro3"
                android:gravity="center"
                android:lines="2"
                android:text="Und."/>
            <TextView
                android:id="@+id/listaCantidadE"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:lines="2"
                android:textColor="@color/colorAzulOscuro3"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Cant E"/>
           <RadioButton
               android:id="@+id/rbBueno"
               android:layout_width="40dp"
               android:layout_height="match_parent"
               android:layout_gravity="center"
               android:gravity="center"
               app:buttonTint="@color/colorRojo"
               />
            <RadioButton
                android:id="@+id/rbRegular"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                app:buttonTint="@color/colorRojo"
                />
            <RadioButton
                android:id="@+id/rbMalo"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                app:buttonTint="@color/colorRojo"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorNaranja"
        android:layout_below="@id/card_view"
        />
</RelativeLayout>