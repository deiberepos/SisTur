<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contenedor"
    tools:context=".usuarios.LogueoUsuarios">

    <ImageView
        android:id="@+id/bgHeader"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:contentDescription="header"
        android:scaleType="fitXY"
        android:src="@drawable/trazado1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-13dp"
        android:contentDescription="foter"
        android:scaleType="fitXY"
        android:src="@drawable/trazado2" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="168dp"
        android:layout_height="102dp"
        android:layout_below="@+id/tvlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-14dp"
        android:background="@drawable/logoinicial" />

    <TextView
        android:id="@+id/tvlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-5dp"
        android:shadowColor="@color/colorClaro"
        android:text="Ingreso de Usuarios"
        android:layout_below="@+id/bgHeader"
        android:textSize="20sp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginBottom="-100dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="30dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv"
                android:layout_width="wrap_content"
                android:layout_height="132dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                app:cardCornerRadius="70dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/editTextUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@color/transparent"
                        android:drawableStart="@drawable/user"
                        android:drawablePadding="30dp"
                        android:hint="usuario"
                        android:inputType="textPostalAddress"
                        android:padding="10dp" />
                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/editTextUsuario"
                        android:background="#71d2d2d2" />

                    <EditText
                        android:id="@+id/editTextPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view1"
                        android:layout_margin="5dp"
                        android:background="@color/transparent"
                        android:drawableStart="@drawable/pass"
                        android:drawablePadding="30dp"
                        android:hint="contraseÃ±a"
                        android:inputType="textPassword"
                        android:padding="10dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="171dp"
                android:layout_alignTop="@id/cv"
                android:layout_alignRight="@id/cv"
                android:layout_alignBottom="@id/cv"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-41dp"
                android:layout_marginBottom="1dp"
                android:elevation="10dp">

                <ImageButton
                    android:id="@+id/botonIngreso"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btninicio"
                    android:src="@drawable/arrow" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>