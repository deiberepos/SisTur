<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Editex">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:hint">@string/escribe_aqu</item>
        <item name="android:textSize">25sp</item>>
    </style>
    <style name="TexviewTitulo">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/txvtitulo</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="TexviewsubTitulo">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/txvsubtitulo</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="ButtonImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:colorBackground">@color/colorPrimarioSuave</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="edit">
        <item name="android:height">42dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TemaDialogo" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorGrisClaro</item>
    </style>

    <style name="IngresoDatos">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@color/colorNegro</item>
        <item name="android:textColorHint">@color/colorNegro</item>
        <item name="android:backgroundTint">@color/colorRojo</item>
    </style>

</resources>